{
  "extends": "./config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "lily-web/*": ["packages/lily-web/src/*"],
      "lily-web": ["packages/lily-web/src"],
      "lily-components": [ "packages/lily-components/src" ],
      "lily-components/*": [ "packages/lily-components/src/*" ]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/lily/ts",
      "./node_modules/@types"
    ]
  },
}
