{
  "extends": "./config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@lily/apps/*": ["packages/apps/src/*"],
      "@lily/apps": ["packages/apps/src"],
      "@lily/react-components": [ "packages/react-components/src" ],
      "@lily/react-components/*": [ "packages/react-components/src/*" ]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/lily/ts",
      "./node_modules/@types"
    ]
  }
}
